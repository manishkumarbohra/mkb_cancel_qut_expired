<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cancel_qut_expired_cron" model="ir.cron">
            <field name="name">Sales Order : Cancel Expired Quotation</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.cancel_qut_expired()</field>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=1, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>